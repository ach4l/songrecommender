	<li id="fullcomment-73015974167">
		<a name="comment-73015974167"></a>
		
		<div class="com-normal">
			
<div id="rating-holder-73015974167">
	<div class="numb-holder">
		<span id="com-rating-73015974167">
			<strong class="numb" id='numb-rating-73015974167'>0</strong>
		</span>
	
				
		<div style="display: none; text-align: center;" id="com-whorated-73015974167" class="com-whorated">
			<span class="processing"></span>
		</div>

		<div id="processing-73015974167" style="text-align: center; padding: 8px 8px 0px 12px; display: none;">
